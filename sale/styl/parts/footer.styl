#footer
	background-image url(../img/footer_bg.png)
	background-position: center top
	background-repeat no-repeat
	background-size: cover
	width 100%
	height: 518px
	position relative
	z-index: 99
	p
		font-size: 24px;
		font-family: "RobotoSlabBold", sans-serif;
		color: #3a3b3a
		line-height: 1.333;
		text-align: center;
		max-width: 770px
		margin-left auto
		margin-right auto
		&:first-child
			padding-top: 215px
			margin-bottom: 35px
		&:last-child
			bottom: 0
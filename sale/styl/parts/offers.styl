#offers
    background-image url(../img/offers_bg.jpg)
    background-repeat no-repeat
    background-position: center top
    background-size: cover
    width: 100%
    position: relative
    padding-bottom: 140px;
    .divider+.row
        margin-top: 65px
.offer_wrapper
    border-radius: 5px;
    background-color: #fff
    box-shadow: 0px 5px 8.46px 0.54px rgba(0, 0, 0, 0.2);
    padding: 5px
    height: 413px
    margin-bottom: 40px
.offer_inner
    border 1px solid #b4373a
    border-radius: 5px;
    height: 100%
    position relative
    text-align: center
    img
        width: 100%
        height: auto
        border-radius: 5px
    h4
        font-size: 20px;
        font-family: "RobotoSlabBold", sans-serif;
        color: #3a3939
        line-height: 1
        margin: 0
        padding: 20px 5px 10px
    .author
        font-size: 18px;
        font-family: "RobotoCondensed", sans-serif;
        color: #3a3939
        line-height: 1.389;
        margin: 0
        padding: 0 5px
    .prices
        position: absolute
        bottom: 0
        left 0
        right 0
        padding: 15px 20px
        display: table
        width: 100%
        .old_price
            display: table-cell
            vertical-align: middle
            font-size: 20px;
            font-family: "RobotoSlabRegular", sans-serif;
            color: #3a3939
            line-height: 1.25;
            text-align: left
        .offer_price
            display: table-cell
            font-size: 27px;
            font-family: "RobotoSlabBold", sans-serif;
            color: #3e963d
            line-height: 1
            text-align: right
.offer_links
    overflow hidden
    margin-bottom: 60px
    .button
        height: 51px
        line-height: 2.5
        width: 133px
        float left
        margin: 0
        &+a
            font-size: 18px;
            font-family: "RobotoSlabRegular", sans-serif;
            color: #333232
            float: right
            border-bottom: 1px dashed
            margin: 15px 15px 0

.timer
    h4
        font-size: 36px;
        font-family: "RobotoBoldCondensed", sans-serif;
        color: #ff0000
        text-transform: uppercase;
        line-height: 1
        text-align: center;
        text-shadow: 2.5px 4px 3px rgba(0,0,0,0.3)
    .clock-stop
        width: 90%;
        margin: 25px auto 0;
        font-size: 24px;
        text-align: center;
    .alert
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    .alert-danger
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
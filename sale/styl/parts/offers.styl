#offers
    background-image url(../img/offers_bg.jpg)
    background-repeat no-repeat
    background-position: center top
    background-size: cover
    width: 100%
    position: relative
    .divider+.row
        margin-top: 65px
.offer_wrapper
    border-radius: 5px;
    background-color: #fff
    box-shadow: 0px 5px 8.46px 0.54px rgba(0, 0, 0, 0.2);
    padding: 5px
.offer_inner
    border 1px solid #b4373a
    border-radius: 5px;
    img
        width: 100%
        height: auto
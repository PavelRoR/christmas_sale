#special
	position relative
	width: 100%
	background-image url(../img/spec_bg.jpg)
	background-repeat no-repeat
	background-position: center -15px
	background-size: cover
	z-index: 0
	.container
		position relative
		h3
			color: #fbf9f9
.spec_balls
	overflow hidden
.spec_ball
	width: 545px
	height: 735px
	margin: 0 auto 80px
	background-repeat no-repeat
	background-size contain
	background-position: center top
	position: relative
	top: -130px
	&.first
		background-image url(../img/spec_1.png)
		float left
		left -25px
	&.last
		background-image url(../img/spec_2.png)
		float right
		right -25px
	p
		font-size: 19px;
		font-family: "RobotoSlabRegular", sans-serif;
		color: #2a2929
		line-height: 1.263;
		text-align: center;
		position absolute
		bottom: 280px
		left: 0;
		right: 0;
		width: 72%
		margin: 0 auto
	.button
		width: 133px
		height 50px
		line-height: 2.4;
		position: absolute
		bottom: 40px;
		left: 0;
		right: 0;
